@model Models.Dishes

@{
    ViewBag.Title = "菜品信息修改";
    Layout = "~/Areas/HotelWebManage/Views/Shared/HotelManageMaster.cshtml";
}
<link href="~/Styles/Dishes.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/validation-min.js"></script>
<script src="~/Scripts/uploadPreview.js"></script>
<script type="text/javascript">
    $(function () {
        $("#dishesImg").uploadPreview({ Img: "imghead", width: 302, Height: 227 })
    });
</script>

@using (Html.BeginForm("SubmitModifyDishes", "Dishes", FormMethod.Post, new { enctype = "multipart/form-data", id = "mainForm", name = "mainForm" }))
{
    <div class="txtItemdiv">
        @Html.HiddenFor(d=>d.DishesId,new { })
        <div class="itemtitle">
            菜品名称：
        </div>
        <div class="itemcontent">
            @Html.TextBoxFor(d => d.DishesName, new { @class = "txt" })
            <span style="color:red">*</span>
        </div>
    </div>
    <div class="txtItemdiv">
        <div class="itemtitle">
            菜品价格：
        </div>
        <div class="itemcontent">
            @Html.TextBox("UnitPrice",(int)Model.UnitPrice, new { @class = "txt" })
            <span style="color:red">*</span>
        </div>
    </div>
    <div class="txtItemdiv">
        <div class="itemtitle">
            菜品分类：
        </div>
        <div class="itemcontent">
            @Html.DropDownList("CategoryId", (SelectList)ViewBag.DishesCategoryList)
            <span style="color:red">*</span>
        </div>
    </div>
    <div class="txtItemdiv">
        <div class="itemtitle">
            菜品图片：
        </div>
        <div class="itemcontent">
            <img id="imghead" src="~/Images/dishes/@Model.DishesImg" width="302" height="227" />（要求图片必须小于2M）
        </div>
    </div>
    <div class="txtItemdiv">
        <div class="itemtitle">
            要上传的图片：
        </div>
        <div class="itemcontent">
            <input type="file" id="dishesImg" name="dishesImg" />
        </div>
    </div>
    <div class="txtItemdiv">
        <div class="itemtitle" style="margin-left:80px;">
            <button class="btncss" type="submit" id="btnAdd">确认修改</button>
        </div>
    </div>
}
<script type="text/javascript">
    $("#mainForm").valid([
        { name: "DishesName", isNull: "菜品名称不能为空", onFocus: "请填写菜品名称" },
        { name: "UnitPrice", type: "number", error: "菜品价格必须为整数", isNull: "请填写菜品价格", onFocus: "请填写正确的菜品价格" }, true
    ]);
</script>

